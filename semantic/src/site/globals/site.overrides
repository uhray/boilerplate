/*******************************
         Site Overrides
*******************************/

@colors: blue, green, orange, pink, purple, red, teal, yellow, black, grey, white;
.ui.text {
    .-(@i: length(@colors)) when (@i > 0) {
        @c: extract(@colors, @i);
        &.@{c} { color: @@c }
        .-((@i - 1));
    }.-;
}

.ui.text.primary { color: @primaryColor; }
.ui.text.secondary { color: @secondaryColor }
